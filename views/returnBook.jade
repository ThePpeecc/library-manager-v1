extends layout
//Here is the main content
block content
    h1 #{title}
    p
      strong Book Title: 
      | #{book.title}
    p
      strong Loaned By: 
      | #{patron.first_name} #{patron.last_name}
    p
      strong Loaned On: 
      | #{loaned_on}
    p
      strong Return By: 
      | #{return_by}
    form(action='/loans/' + loan.id method='post')
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text' value=return_by name='returned_on')
      p
        input(type='submit', value='Return Book')

    if errors != null 
      each error in errors
        p(class='error') #{error.message}
        
